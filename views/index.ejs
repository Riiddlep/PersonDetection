<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <title><%= title %></title> <!-- TODO: Tu recupères des variables depuis le backend en les ajoutant en option -->
    </head>
    <body>
        <br>
        <div class='container'>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h1 class="h2"><%= title %></h1>
            </div>

            <form role="form" action="/" method="post" enctype="content-type/json">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nombre de personnes autorisées</label>
                    <div class="col-sm-10">
                        <input required name="maxAllowedPersons" class="form-control" min=0 type="number">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Message de diffusion</label>
                    <div class="col-sm-10">
                        <textarea required asp-for="broadcastMessage" name="broadcastMessage" class="form-control" rows="3" minlength="10" maxlength="100"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Langage de diffusion</label>
                    <div class="col-sm-10">
                        <div class="form-check form-check-inline">
                            <input name="langs" value="fr-FR" class="form-check-input" type="checkbox" checked required>
                            <label class="form-check-label" for="inlineCheckbox1">Français</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="langs" value="fr-CA" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Français (Canada)</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="langs" value="en-US" class="form-check-input" type="checkbox">
                            <label class="form-check-label" for="Enlang">Anglais</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="langs" value="es-ES" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Espagnol</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="langs" value="de-DE" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Allemand</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="langs" value="ja-JP" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Japonais</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="langs" value="zh-CN" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Chinois</label>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" name="submit" class="btn btn-primary">Générer les audios</button>
                    </div>
                </div>
            </form>

            <table class="table table-inverse">
                <thead>
                    <tr>
                        <th>Nombre de personnes autorisées</th>
                        <th>Message diffusé</th>
                        <th>Langages</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (success) { %>
                    <tr>
                        <td><%= maxAllowedPersons %></td>
                        <td><%= broadcastMessage %></td>
                        <td><%= languages.join(', ') %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>
